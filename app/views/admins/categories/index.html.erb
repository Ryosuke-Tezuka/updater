<% @page_title = "管理者/カテゴリーページ" %>

<h1 class="page-header">カテゴリー追加ページ</h1>

<div class="row">
  <div class="col-sm-12">
    <%= render "category_form" %>
    <h3 class="page-header">カテゴリー一覧</h3>
      <ul class="nav nav-pills nav-stacked">
        <% @categories.each do |category| %>
          <h4 class="page-header"><%= link_to category.name, admins_category_path(category.id) %></h4>
        <% end %>
      </ul>
  </div>
</div>