<% @page_title = "管理者/受講スライドページ" %>

<div class="slide-container">
  <h3 class="page-header"><%= @lesson.name %>
    <%= link_to "前へ戻る", :back, class:"btn btn-info pull-right slide-item" %>
  </h3>
  <div class="row">
    <div class="col-sm-12">
      <% if @lesson.video? %>
        <%= video_tag @lesson.video.url, controls: true, poster: @lesson.image.url %>
      <% else %>
        <h5>ただいま準備中です</h5>
      <% end %>
    </div>
  </div>
</div>