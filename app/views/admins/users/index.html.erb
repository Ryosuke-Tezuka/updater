<% @page_title = "管理者/ユーザーページ" %>

<h1 class="page-header">ユーザー一覧ページ</h1>

<div class="row">
  <div class="col-sm-12">
  	<table class="table table-hover table-striped">
  	  <tr>
      	<th>名前</th><th>メールアドレス</th><th>入会日</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.fullname, admins_user_path(user.id) %></td>
          <td><%= link_to user.email %></td>
          <td><%= user.created_at.to_date.strftime("%Y/%m/%d") %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>