<% @page_title = "受講スライドページ" %>

<div class="row">
  <h3 class="page-header"><%= @lesson.name %></h3>
  <div class="col-sm-12">
    <% if @lesson.video? %>
      <%= video_tag @lesson.video.url, controls: true, poster: @lesson.image.url %>
    <% end %>

    <% if Attend.exists?(user_id: current_user.id, lesson_id: @lesson.id) %>
      <%= link_to "レッスン一覧へ", categories_path %>
    <% else %>
      <%= link_to "受講完了", attends_path(lesson_id: @lesson.id), method: :post %>
    <% end %>
  </div>
</div>