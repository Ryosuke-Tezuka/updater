<% @page_title = "受講スライドページ" %>

<div class="slide-container">
  <h3 class="page-header"><%= @lesson.name %>
    <% if Attend.exists?(user_id: current_user.id, lesson_id: @lesson.id) %>
      <%= link_to "受講済み", categories_path, class:"btn btn-danger disabled pull-right slide-item" %>
    <% else %>
      <%= link_to "完了する", attends_path(lesson_id: @lesson.id), method: :post, class:"btn btn-danger pull-right slide-item" %>
    <% end %>
    <%= link_to "前へ戻る", :back, class:"btn btn-info pull-right slide-item" %>
  </h3>
  <div class="row">
    <div class="col-sm-12">
      <% if @lesson.video? %>
        <%= video_tag @lesson.video.url, controls: true, poster: @lesson.image.url %>
      <% else %>
        <h5>ただいま準備中です</h5>
      <% end %>
    </div>
  </div>
</div>