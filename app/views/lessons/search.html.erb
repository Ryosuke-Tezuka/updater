<% @page_title = "検索結果ページ" %>

<h2>検索結果ページ</h2>

<% @search_lessons.each do |lesson| %>
  <%= link_to lesson_path(lesson.id) do %>
	<% if lesson.image? %>
    <%= image_tag lesson.image.url, width: 300, heith: 200 %>
  <% end %>
	<%= lesson.rank.name %>
	<%= lesson.name %>
	<%= lesson.time %>
  <!-- XXX: 秒数表示を分数表示に要変更 -->
  <% end %>
<% end %>

<% if @search_lessons.blank? %>
  <%= "該当するレッスンはありませんでした" %>
<% end %>