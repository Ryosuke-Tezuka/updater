<% @page_title = "ユーザートップページ" %>

<h2>ユーザートップページ</h2>

<%= render "time_chart" %>
<%= render "lesson_chart" %>

<h4>学習中のカテゴリー一覧</h4>
  <% @selected_category.lessons.each do |lesson| %>
    <%= link_to lesson_path(lesson.id) do %>
	    <% if lesson.image? %>
        <%= image_tag lesson.image.url, width: 200, heith: 130 %>
      <% end %>
	    <%= lesson.rank.name %>
	    <%= lesson.name %>
	    <%= lesson.time %>
    <!-- XXX: 秒数表示を分数表示に要変更 -->
    <% end %>
  <% end %>

<h4>新着レッスン一覧</h4>
  <% @new_lessons.each do |lesson| %>
  	<%= link_to lesson_path(lesson.id) do %>
      <% if lesson.image? %>
        <%= image_tag lesson.image.url, width: 200, heith: 130 %>
      <% end %>
      <%= lesson.rank.name %>
      <%= lesson.name %>
      <%= lesson.time %>
    <!-- XXX: 秒数表示を分数表示に要変更 -->
    <% end %>
  <% end %>